<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="News_Manger::news" title="News Management" sortOrder="100">
                    <resource id="News_Manger::category" title="Category Management" sortOrder="10">
                        <resource id="News_Manger::category_save" title="Save Category" sortOrder="10"/>
                        <resource id="News_Manger::category_delete" title="Delete Category" sortOrder="20"/>
                        <resource id="News_Manger::category_view" title="View Category" sortOrder="30"/>
                    </resource>
                    <resource id="News_Manger::news_manage" title="News Management" sortOrder="20">
                        <resource id="News_Manger::news_save" title="Save News" sortOrder="10"/>
                        <resource id="News_Manger::news_delete" title="Delete News" sortOrder="20"/>
                        <resource id="News_Manger::news_view" title="View News" sortOrder="30"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
