<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- جدول الأقسام -->
    <table name="news_category" resource="default" engine="innodb" comment="News Category Table">
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" identity="true" comment="Category ID"/>
        <column xsi:type="varchar" name="category_name" length="255" nullable="false" comment="Category Name"/>
        <column xsi:type="text" name="category_description" nullable="true" comment="Category Description"/>
        <column xsi:type="smallint" name="category_status" unsigned="true" nullable="false" default="1" comment="Category Status (1=Active, 0=Inactive)"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_id"/>
        </constraint>

        <index referenceId="NEWS_CATEGORY_NAME" indexType="btree">
            <column name="category_name"/>
        </index>

        <index referenceId="NEWS_CATEGORY_STATUS" indexType="btree">
            <column name="category_status"/>
        </index>
    </table>

    <!-- جدول الأخبار -->
    <table name="news_news" resource="default" engine="innodb" comment="News Table">
        <column xsi:type="int" name="news_id" unsigned="true" nullable="false" identity="true" comment="News ID"/>
        <column xsi:type="varchar" name="news_title" length="255" nullable="false" comment="News Title"/>
        <column xsi:type="text" name="news_content" nullable="true" comment="News Content"/>
        <column xsi:type="smallint" name="news_status" unsigned="true" nullable="false" default="1" comment="News Status (1=Active, 0=Inactive)"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="news_id"/>
        </constraint>

        <index referenceId="NEWS_STATUS" indexType="btree">
            <column name="news_status"/>
        </index>
    </table>

    <!-- جدول الربط بين الأخبار والأقسام -->
    <table name="news_news_category" resource="default" engine="innodb" comment="News-Category Relation Table">
        <column xsi:type="int" name="news_id" unsigned="true" nullable="false" comment="News ID"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" comment="Category ID"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="news_id"/>
            <column name="category_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="NEWS_CATEGORY_NEWS_ID_FK"
                   table="news_news_category" column="news_id"
                   referenceTable="news_news" referenceColumn="news_id"
                   onDelete="CASCADE"/>

        <constraint xsi:type="foreign" referenceId="NEWS_CATEGORY_CATEGORY_ID_FK"
                   table="news_news_category" column="category_id"
                   referenceTable="news_category" referenceColumn="category_id"
                   onDelete="CASCADE"/>

        <index referenceId="NEWS_CATEGORY_NEWS_ID" indexType="btree">
            <column name="news_id"/>
        </index>

        <index referenceId="NEWS_CATEGORY_CATEGORY_ID" indexType="btree">
            <column name="category_id"/>
        </index>
    </table>



</schema>
