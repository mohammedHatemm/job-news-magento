<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Filter Pools -->
    <virtualType name="NewsGridFilterPool" type="Magento\Ui\Model\Filter\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Ui\Model\Filter\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Ui\Model\Filter\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CategoryGridFilterPool" type="Magento\Ui\Model\Filter\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Ui\Model\Filter\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Ui\Model\Filter\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Collection Factory UI Mappings -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="news_news_listing_data_source" xsi:type="string">NewsGridSearchResult</item>
                <item name="news_category_listing_data_source" xsi:type="string">CategoryGridSearchResult</item>
            </argument>
        </arguments>
    </type>

    <!-- Search Result Virtual Types -->
    <virtualType name="NewsGridSearchResult" type="News\Manger\Model\ResourceModel\News\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">news_news</argument>
            <argument name="resourceModel" xsi:type="string">News\Manger\Model\ResourceModel\News</argument>
            <argument name="eventPrefix" xsi:type="string">news_news_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">news_news_grid_collection</argument>
        </arguments>
    </virtualType>

    <virtualType name="CategoryGridSearchResult" type="News\Manger\Model\ResourceModel\Category\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">news_category</argument>
            <argument name="eventPrefix" xsi:type="string">news_category_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">news_category_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">News\Manger\Model\ResourceModel\Category</argument>
        </arguments>
    </virtualType>

    <!-- DataProviders -->
    <type name="News\Manger\Ui\DataProvider\News\NewsGridDataProvider">
        <arguments>
            <argument name="collection" xsi:type="object">NewsGridSearchResult</argument>
        </arguments>
    </type>

    <type name="News\Manger\Ui\DataProvider\Category\CategoryGridDataProvider">
        <arguments>
            <argument name="collection" xsi:type="object">CategoryGridSearchResult</argument>
            <argument name="name" xsi:type="string">category_grid_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">category_id</argument>
            <argument name="requestFieldName" xsi:type="string">category_id</argument>
        </arguments>
    </type>

    <type name="News\Manger\Ui\DataProvider\Category\CategoryFormDataProvider">
        <arguments>
            <argument name="name" xsi:type="string">category_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">category_id</argument>
            <argument name="requestFieldName" xsi:type="string">category_id</argument>
        </arguments>
    </type>

    <!-- API Preferences -->
    <preference for="News\Manger\Api\NewsRepositoryInterface" type="News\Manger\Model\NewsRepository"/>
    <preference for="News\Manger\Api\CategoryRepositoryInterface" type="News\Manger\Model\CategoryRepository"/>
    <preference for="News\Manger\Api\Data\CategoryInterface" type="News\Manger\Model\Data\Category"/>
    <preference for="News\Manger\Api\Data\NewsInterface" type="News\Manger\Model\Data\News"/>
    <preference for="News\Manger\Api\Data\CategorySearchResultsInterface" type="News\Manger\Model\Data\CategorySearchResults"/>
    <preference for="News\Manger\Api\Data\NewsSearchResultsInterface" type="News\Manger\Model\Data\NewsSearchResults"/>

    <!-- Model Resource Configuration -->
    <type name="News\Manger\Model\News">
        <arguments>
            <argument name="resource" xsi:type="object">News\Manger\Model\ResourceModel\News</argument>
            <argument name="resourceCollection" xsi:type="object">News\Manger\Model\ResourceModel\News\Collection</argument>
        </arguments>
    </type>

    <!-- Collections -->
    <type name="News\Manger\Model\ResourceModel\News\Collection">
        <arguments>
            <argument name="eventPrefix" xsi:type="string">news_news_collection</argument>
            <argument name="eventObject" xsi:type="string">news_news_collection</argument>
            <argument name="resourceModel" xsi:type="string">News\Manger\Model\ResourceModel\News</argument>
        </arguments>
    </type>

    <type name="News\Manger\Model\ResourceModel\Category\Collection">
        <arguments>
            <argument name="eventPrefix" xsi:type="string">news_category_collection</argument>
            <argument name="eventObject" xsi:type="string">news_category_collection</argument>
            <argument name="resourceModel" xsi:type="string">News\Manger\Model\ResourceModel\Category</argument>
        </arguments>
    </type>

    <!-- Repository Configuration -->
    <type name="News\Manger\Model\NewsRepository">
        <arguments>
            <argument name="newsFactory" xsi:type="object">News\Manger\Model\NewsFactory</argument>
            <argument name="resource" xsi:type="object">News\Manger\Model\ResourceModel\News</argument>
            <argument name="collectionFactory" xsi:type="object">News\Manger\Model\ResourceModel\News\CollectionFactory</argument>
            <argument name="dataNewsFactory" xsi:type="object">News\Manger\Api\Data\NewsInterfaceFactory</argument>
            <argument name="searchResultsFactory" xsi:type="object">News\Manger\Api\Data\NewsSearchResultsInterfaceFactory</argument>
            <argument name="categorySearchResultsFactory" xsi:type="object">News\Manger\Api\Data\CategorySearchResultsInterfaceFactory</argument>
            <argument name="collectionProcessor" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor</argument>
            <argument name="searchCriteriaBuilder" xsi:type="object">Magento\Framework\Api\SearchCriteriaBuilder</argument>
            <argument name="dataObjectHelper" xsi:type="object">Magento\Framework\Api\DataObjectHelper</argument>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
        </arguments>
    </type>

    <type name="News\Manger\Model\CategoryRepository">
        <arguments>
            <argument name="resource" xsi:type="object">News\Manger\Model\ResourceModel\Category</argument>
            <argument name="categoryFactory" xsi:type="object">News\Manger\Model\CategoryFactory</argument>
            <argument name="dataCategoryFactory" xsi:type="object">News\Manger\Api\Data\CategoryInterfaceFactory</argument>
            <argument name="collectionFactory" xsi:type="object">News\Manger\Model\ResourceModel\Category\CollectionFactory</argument>
            <argument name="searchResultsFactory" xsi:type="object">News\Manger\Api\Data\CategorySearchResultsInterfaceFactory</argument>
            <argument name="collectionProcessor" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor</argument>
            <argument name="searchCriteriaBuilder" xsi:type="object">Magento\Framework\Api\SearchCriteriaBuilder</argument>
            <argument name="dataObjectHelper" xsi:type="object">Magento\Framework\Api\DataObjectHelper</argument>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
        </arguments>
    </type>

</config>
