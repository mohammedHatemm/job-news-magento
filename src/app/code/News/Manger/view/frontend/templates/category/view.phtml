<?php else: ?>
  <div class="category-not-found">
    <h2><?= $block->escapeHtml(__('Category Not Found')) ?></h2>
    <p><?= $block->escapeHtml(__('The requested category could not be found.')) ?></p>
    <a href="<?= $block->escapeUrl($block->getUrl('newsuser/user')) ?>" class="back-link">
      <?= $block->escapeHtml(__('Back to News List')) ?>
    </a>
  </div>
<?php endif; ?>
