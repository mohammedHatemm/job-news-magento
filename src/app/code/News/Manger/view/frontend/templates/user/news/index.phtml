<div class="news-list-container">
  <h1><?= $block->escapeHtml(__('News')) ?></h1>

  <?php $collection = $block->getNewsCollection(); ?>

  <?php if ($collection && $collection->count()): ?>
    <div class="news-grid">
      <?php foreach ($collection as $news): ?>
        <div class="news-card">
          <div class="news-card-content">
            <h2 class="news-title">
              <a href="<?= $block->escapeUrl($block->getUrl('newsuser/user/view', ['id' => $news->getId()])) ?>">
                <?= $block->escapeHtml($news->getNewsTitle()) ?>
              </a>
            </h2>

            <div class="news-excerpt">
              <p><?= $block->escapeHtml($block->getExcerpt($news->getNewsContent())) ?></p>
            </div>

            <?php $categories = $block->getCategoriesForNews($news->getId()); ?>
            <?php if (!empty($categories)): ?>
              <div class="news-categories">
                <?php foreach ($categories as $categoryName): ?>
                  <span class="category-tag"><?= $block->escapeHtml($categoryName) ?></span>
                <?php endforeach; ?>
              </div>
            <?php endif; ?>
          </div>

          <div class="news-card-footer">
            <span class="news-meta">
              <?= $block->escapeHtml(__('Published on: %1', $block->formatDate($news->getCreatedAt(), \IntlDateFormatter::MEDIUM))) ?>
            </span>
            <a href="<?= $block->escapeUrl($block->getUrl('newsuser/user/view', ['id' => $news->getId()])) ?>" class="btn-read-more">
              <?= $block->escapeHtml(__('Read More')) ?>
            </a>
          </div>
        </div>
      <?php endforeach; ?>
    </div>
  <?php else: ?>
    <div class="message info empty">
      <div><?= $block->escapeHtml(__('There are no news items to display.')) ?></div>
    </div>
  <?php endif; ?>
</div>

